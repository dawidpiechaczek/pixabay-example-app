<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Widget.App.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.FilledBox.Dense">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearance.App.SmallComponent.SmallCorner
        </item>
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.LildogTextInputLayout</item>
        <item name="backgroundColor">@android:color/transparent</item>
        <item name="boxBackgroundColor">@android:color/transparent</item>
        <item name="android:background">@null</item>
        <item name="boxStrokeWidth">2dp</item>
        <item name="boxStrokeWidthFocused">2dp</item>
        <item name="android:textColorHint">@android:color/darker_gray</item>
        <item name="startIconTint">@color/primary</item>
    </style>

    <style name="ThemeOverlay.App.LildogTextInputLayout" parent="">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorOnSurface">@android:color/darker_gray</item>
        <item name="colorError">@android:color/holo_red_dark</item>
        <item name="editTextStyle">@style/editTextStyleFilledBox</item>
        <item name="autoCompleteTextViewStyle">@style/editTextStyleFilledBox</item>
    </style>

    <style name="editTextStyleFilledBox" parent="Widget.MaterialComponents.TextInputEditText.FilledBox">
        <item name="android:textColorHint">@android:color/darker_gray</item>
        <item name="startIconTint">@color/primary</item>
    </style>
</resources>